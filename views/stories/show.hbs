<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card card-story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'dddd, MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-tiny">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">more from {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">Recommended Movies</span>
            </div>
        </div>
    </div>
</div>